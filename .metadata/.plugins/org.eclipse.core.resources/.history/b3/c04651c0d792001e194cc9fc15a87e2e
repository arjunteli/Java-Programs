package com.kn.BinaryTreeDemo;

public class BuildTree {
	static int idx = -1;

	public Node buildTree(int[] nodes) {
		idx++;
		if (nodes[idx] == -1) {
			return null;
		}
		Node newNode = new Node(nodes[idx]);
		newNode.left = buildTree(nodes);
		newNode.right = buildTree(nodes);

		return newNode;
	}
}
